@model IEnumerable<MiPrimerAplicacionWebConEntityFramework.Models.BusCLS>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar", "Agregar","Bus",null,new { @class="btn btn-primary"})
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.iidbus)
            <a href="~/Views/Bus/Index.cshtml">~/Views/Bus/Index.cshtml</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreSucursal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreTipoBus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechacompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreModelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreMarca)
        </th>
        <th>
            Operaciones
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.iidbus)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreSucursal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreTipoBus)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.placa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.fechacompra)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreModelo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreMarca)
    </td>
    <td>
        @Html.ActionLink(" ", "Editar", "Bus", new { id = @item.iidbus }, new { @class = "glyphicon glyphicon-pencil btn btn-primary" })
        @Html.ActionLink(" ", "Eliminar", "Bus", new { id = @item.iidbus }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
    </td>

</tr>
}

</table>
