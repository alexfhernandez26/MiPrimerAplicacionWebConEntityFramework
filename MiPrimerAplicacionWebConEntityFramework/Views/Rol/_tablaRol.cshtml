@using MiPrimerAplicacionWebConEntityFramework.Models
@model List<RolCLS>

<table class="table table-bordered table-hover">

    <thead>

        <tr>

            <th>@Html.LabelFor(p => Model[0].iidrol)</th>

            <th>@Html.LabelFor(p => Model[0].nombre)</th>

            <th>@Html.LabelFor(p => Model[0].descripcion)</th>

            <th>Operaciones</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)

        {

        <tr>



            <td>@item.iidrol</td>

            <td>@item.nombre</td>

            <td>@item.descripcion</td>

            <td>
                <button type="button" onclick="Editar(@item.iidrol)" class="btn btn-primary glyphicon glyphicon-edit" data-toggle="modal" data-target="#exampleModal">
                </button>
                <button type="button" onclick="Eliminar(@item.iidrol)" class="btn btn-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#exampleModalDelete">
                    
                </button>
            </td>


        </tr>
        }

    </tbody>

</table>
